@model CreateProductCommand
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <br />
<form method="post">
    <label>Ürün Adı</label>
    <input type="text" class="form-control" asp-for="ProductName" />
    <br />
    <label>Ürün Stok</label>
    <input type="text" class="form-control" asp-for="ProductStock" />
    <br />
    <label>Ürün Fiyat</label>
    <input type="text" class="form-control" asp-for="ProductPrice" />
    <br />
    <label>Ürün Durum</label>
    <input type="text" class="form-control" asp-for="ProductStatus" />
    <br />
    <button class="btn btn-outline-primary">Ekle</button>
</form>
</div>