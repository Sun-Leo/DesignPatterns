@{
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <link rel="stylesheet" href="~/writer/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/writer/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/writer/assets/css/style.css">
    <link rel="shortcut icon" href="~/writer/assets/images/favicon.ico" />
</head>

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <form method="post">
            <div class="card-body">
                <h4 class="card-title">Şube Para Çekme </h4>
                <p class="card-description"> Para Çekme Ekranı </p>
                <div class="form-group">

                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"></span>
                        </div>
                        <input type="text" class="form-control" placeholder="Müşteri Adı" name="Name" aria-label="Müşteri Adı" aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-gradient-primary text-white">₺</span>
                        </div>
                        <input type="text" class="form-control" name="Amount" aria-label="Amount (to the nearest dollar)">
                        <div class="input-group-append">
                            <span class="input-group-text"></span>
                        </div>
                    </div>
                </div>
            </div>
            <button class="btn btn-outline-primary">Para Çek</button>
        </form>
    </div>
</div>







<script src="~/writer/assets/vendors/js/vendor.bundle.base.js"></script>
<script src="~/writer/assets/js/off-canvas.js"></script>
<script src="~/writer/assets/js/hoverable-collapse.js"></script>
<script src="~/writer/assets/js/misc.js"></script>
<script src="~/writer/assets/js/file-upload.js"></script>
